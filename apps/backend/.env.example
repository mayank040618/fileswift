
# Server Configuration
PORT=8080
NODE_ENV=production
API_URL=http://localhost:8080

# File Storage Config
# Provider: 'local', 's3', or 'r2'
STORAGE_PROVIDER=local

# S3 / R2 Configuration (Required if STORAGE_PROVIDER is 's3' or 'r2')
S3_BUCKET=fileswift
S3_REGION=auto
S3_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# Upload Limits & Cleanup
MAX_UPLOAD_SIZE_MB=200
TTL_UPLOAD_SECONDS=3600

# AI Configuration
OPENAI_API_KEY=
REPLICATE_API_TOKEN=

# Job Queue
# If empty, uses in-memory mock queue. For production use proper Redis URL.
REDIS_URL=
