
# Server Configuration
PORT=8080
NODE_ENV=production
API_URL=http://localhost:8080

# File Storage Config
# Provider: 'local', 's3', or 'r2'
STORAGE_PROVIDER=local

# S3 / R2 Configuration (Required if STORAGE_PROVIDER is 's3' or 'r2')
S3_BUCKET=fileswift
S3_REGION=auto
S3_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# Upload Limits & Cleanup
# Upload Limits & Cleanup
MAX_UPLOAD_SIZE_MB=200
PDF_COMPRESSION_TIMEOUT_MS=60000 # 60 seconds

# AdSense (Google Ads)
NEXT_PUBLIC_ADSENSE_CLIENT_ID="ca-pub-5583723279396814"
TTL_UPLOAD_SECONDS=3600

# AI Configuration
OPENAI_API_KEY=
REPLICATE_API_TOKEN=

# Job Queue
# USE_MOCK_QUEUE=true processes jobs inline (recommended for single-instance deployments)
# If false and REDIS_URL is set, uses BullMQ with Redis (requires shared filesystem between workers)
USE_MOCK_QUEUE=true
REDIS_URL=
